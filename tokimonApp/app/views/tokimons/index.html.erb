<p id="notice"><%= notice %></p>

<h1>Tokimon</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Trainer</th>
      <th>Weight (kg)</th>
      <th>Height (m)</th>
      <th>Type</th>
      <th>Fly</th>
      <th>Fight</th>
      <th>Fire</th>
      <th>Water</th>
      <th>Electric</th>
      <th>Ice</th>
      <th>Total</th>
      <th class="empty" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% sorted = @tokimons.sort_by{|tokimon| tokimon.tname.downcase} %>
    <% sorted.each do |tokimon| %>
      <tr>
        <td><%= tokimon.tname %></td>
        <td><%= @trainers.find(tokimon.trainer_id).tname %></td>
        <td><%= tokimon.weight %></td>
        <td><%= tokimon.height %></td>
        <td><%= tokimon.elementtype %></td>
        <td><%= tokimon.fly %></td>
        <td><%= tokimon.fight %></td>
        <td><%= tokimon.fire %></td>
        <td><%= tokimon.water %></td>
        <td><%= tokimon.electric %></td>
        <td><%= tokimon.ice %></td>
        <td><%= tokimon.total %></td>
        <td class="smallbutton"><%= link_to 'View', tokimon %></td>
        <td class="smallbutton"><%= link_to 'Edit', edit_tokimon_path(tokimon) %></td>
        <td class="smallbutton"><%= link_to 'Delete', tokimon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>

<table class="links">
  <tr>
      <td><b class="normalbutton"><%= link_to 'New Tokimon', new_tokimon_path %></b></td>
      <td><b class="normalbutton"><%= link_to 'New Random Tokimon', random_tokimon_path %></b></td>
      <td><b class="normalbutton"><%= link_to 'View Trainers', trainers_path %></b></td>
  </tr>
</table>
